<div class="card mb-4 w-100">
  <div class="card-body position-relative">
    <span class="followers-count badge bg-info text-black position-absolute d-none">
    </span>

    <div class="row mb-3 bot-showcase">
      <div class="col-sm-12">
        {{#if about.about_url}}
        <a rel="me"
          href="{{about_url}}">
          {{else}}
          <a rel="me"
            href="{{about.links.[0].url}}">
            {{/if}}
            {{#if about.thumbnail}}
            <img class="img-thumbnail mb-2 mr-3"
              src="{{about.thumbnail}}"
              alt="...">
            {{else}}
            <img class="img-thumbnail mb-2 mr-3"
              src="https://generative-placeholders.stefanbohacek.com/image?width=360&height=200&style=cellular-automata&cells=10&colors={{@root.generative_placeholders_color}}&{{@key}}"
              alt="...">
            {{/if}}
          </a>
      </div>
      <div class="col-sm-12">
        <h2 class="mt-3">{{about.name}}</h2>
        <p>{{about.description}}</p>
        <ul class="list-unstyled">
          {{#if about.active}}
          {{#if about.reply}}
          <li><span title="This bot replies to you">💬</span> Reply bot</li>
          {{/if}}
          {{#if about.interval_human}}
          <li><span title="Post frequency">⌛</span> {{about.interval_human}}</li>
          {{/if}}
          {{#if about.next_run}}
          <li><span title="Next run">⏱️</span> {{about.next_run}}</li>
          {{/if}}
          {{#if about.last_run}}
          <li><span title="Last run">📅</span> <span class="last-run">{{about.last_run}}</span></li>
          {{/if}}
          {{/if}}
        </ul>
      </div>
      <div class="col-sm-12">
        <p class="bot-links">
          {{#if about.about_url}}
          <a rel="me"
            href="{{about.about_url}}"
            class="btn btn-dark mt-2">Learn more</a>
          {{/if}}
          {{#if about.links}}
          {{#each about.links}}
          <a rel="me"
            href="{{this.url}}"
            class="btn btn-light mt-2">{{this.title}}</a>
          {{/each}}
          {{/if}}
          {{#if about.source_url}}
          <a rel="me"
            href="{{about.source_url}}"
            class="btn btn-light mt-2">View source</a>
          {{/if}}
        </p>
        {{#if about.note}}
        <div class="card">
          <div class="card-body">
            <small>{{about.note}}</small>
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
  {{#if about.tags}}
  <div class="card-footer">
    {{#each about.tags}}
    <span class="badge text-bg-secondary">
      #{{this}}
    </span>
    {{/each}}
  </div>
  {{/if}}
</div>