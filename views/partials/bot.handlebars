<div class="card mb-4">
  <div class="card-body">
    <div class="row mt-3 mb-3 bot-showcase">
      <div class="col-sm-12 col-md-4">
        {{#if about_url}}
            <a href="{{about_url}}">
          {{else}}
            <a href="https://glitch.com/edit/#!/{{@root.project_name}}?path={{file}}">
          {{/if}}      
        {{#if thumbnail}}
            <img class="img-thumbnail mb-2" src="{{thumbnail}}" class="mr-3" alt="...">
        {{else}}
          <img class="img-thumbnail mb-2" src="https://generative-placeholders.glitch.me/image?width=360&height=200&style=cellular-automata&cells=10&colors={{@root.generative_placeholders_color}}&{{@key}}" class="mr-3" alt="...">
        {{/if}}      
        </a>
      </div>
